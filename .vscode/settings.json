{
    "editor.fontSize": 12,
    "workbench.colorTheme": "Atom One Dark",
    "workbench.colorCustomizations": {
        //"editorRuler.foreground": "#363636" // night
        "editorRuler.foreground": "#e2e2e2" // day
    },
    "[python]": {
        "editor.rulers": [
            //79,
            88
        ],
    },

    "python.linting.enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,

    "python.formatting.provider": "black",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    //"python.defaultInterpreterPath": "backend/venv/bin/python",
    "python.analysis.extraPaths": [
        // append extra pathes here:
        // "backend/",
        // "backend/apps/",
    ],
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": false,
    "python.analysis.typeCheckingMode": "off",

    // [TODOs]
    // todo higliter all configs in user settings
    // ~/Library/Application Support/Code/User/settings.json

    "cSpell.enabled": true, // other settings in local config file
    "cSpell.useGitignore": false,

    "python.formatting.blackArgs": [
        //"--config",
        //"backend/pyproject.toml"
    ],
    "python.linting.mypyArgs": [
        //"--follow-imports=silent",
        //"--ignore-missing-imports",
        //"--show-column-numbers",
        //"--no-pretty",
        //"--config",
        //"backend/pyproject.toml"
    ],
    "python.linting.flake8Args": [
        //"--config",
        //"backend/pyproject.toml"
    ],
    "isort.args": [
        //"--config",
        //"backend/pyproject.toml"
    ],


    // Autoflakes running by keybidding defined at: ~/Library/Application Support/Code/User/keybindings.json
    "autoflake-extension.remove-all-unused-imports": true,
    "autoflake-extension.expand-star-imports": true,


    "files.exclude": {
        // "**/*.log": true,
    }

}